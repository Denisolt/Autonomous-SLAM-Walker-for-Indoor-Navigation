<launch>

  <param name="/use_sim_time" value="false" />

  <node pkg="urg_node" type="urg_node" name="laser_scan">
      <param name="port" value="/dev/ttyACM0"/>
      <param name="frame_id" value="laser_scan"/>
      <param name="calibrate_time" type="bool" value="true"/>
      <param name="intensity" type="bool" value="false"/>
      <param name="min_ang" value="-2.356194437"/> 
      <param name="max_ang" value="2.356194437"/>
      <param name="cluster" value="1"/>
      <remap from="scan" to="base_scan"/>
  </node> 

  <!-- start ros_arduino_bridge driver -->
  <include file="$(find ros_arduino_python)/launch/arduino_gmapping.launch" />

  <node pkg="tf" type="static_transform_publisher" name="base_link_to_base_laser_link" args="0.58 0 0.14 0.0 0.0 0 /base_link /laser_scan 100"/>
  
  <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
    <rosparam>
      odom_frame: odom
      base_frame: base_link
      map_frame: map
      map_update_interval: 1
      delta: 0.1
      particles: 50
      maxUrange: 5.2
      maxRange: 5.4
      linearUpdate: 0.1
      angularUpdate: 0.1
      temporalUpdate: -1.0
      <!-- minimumScore: 537.5 -->
    </rosparam>
    <remap from="scan" to="base_scan" />
  </node>
</launch>