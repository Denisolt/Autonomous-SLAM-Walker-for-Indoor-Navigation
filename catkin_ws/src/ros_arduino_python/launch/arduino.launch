<launch>
  <!-- node for urg node to launch -->
  <node pkg="urg_node" type="urg_node" name="laser_scan">
    <param name="port" value="/dev/ttyACM0"/>
    <param name="frame_id" value="laser_scan"/>
    <param name="calibrate_time" type="bool" value="true"/>
    <param name="intensity" type="bool" value="false"/>
    <param name="min_ang" value="-2.356194437"/> 
    <param name="max_ang" value="2.356194437"/>
    <param name="cluster" value="1"/>
  </node>
  
    <!-- ros_arduino_bridge to launch -->
  <node name="arduino" pkg="ros_arduino_python" type="arduino_node.py" output="screen">
    <rosparam file="$(find ros_arduino_python)/config/my_arduino_params.yaml" command="load" />
  </node>

  <!-- tranforms the offset between base_link and base_scan -->
  <node pkg="tf" type="static_transform_publisher" name="base_link_to_base_laser_link" args="0.38 0 0.34 0.0 0.0 0 /base_link /laser_scan 100"/>
</launch>